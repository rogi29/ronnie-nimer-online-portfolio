---
import socialLinksData from "../../data/socialLinks";
import SocialLink from "../core/SocialLink.astro";
---

<footer>
  <hr />
  <h3>
    <b>CONTACT ME</b>
  </h3>
  <h4>Ronnie Nimer</h4>
  <h5>Concept Artist</h5>
  <p>
    <a href="mailto:art.ronnie29@gmail.com" title="email address">
      art.ronnie29@gmail.com
    </a>
  </p>
  <nav aria-label="footer social links">
    {
      socialLinksData.map((props) => (
        <SocialLink {...props} ariaLabel={`Footer link to ${props.title}`} />
      ))
    }
  </nav>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: var(--layoutMaxWidth);
    margin: 0 auto;
    gap: 1rem;
    padding: 0 2rem 2.5rem;
    z-index: 1;
  }
  footer hr {
    width: 100%;
    height: 1px;
    background: rgba(var(--foregroundColor), 50%);
    margin: 0 0 1.5rem;
    border: none;
  }
  footer p,
  footer h3,
  footer h4,
  footer h5 {
    font-size: initial;
    margin: 0;
    font-weight: 400;
    color: rgb(var(--foregroundColor));
    text-align: center;
  }
  footer h4 {
    color: color-mix(
      in srgb,
      rgb(var(--foregroundColor)) 80%,
      rgb(var(--backgroundColor))
    );
  }
  footer h5 {
    color: color-mix(
      in srgb,
      rgb(var(--foregroundColor)) 60%,
      rgb(var(--backgroundColor))
    );
  }
  footer a {
    margin: 0;
    color: rgb(var(--primaryColor));
  }
  footer nav {
    display: flex;
    gap: 1rem;
  }
</style>
