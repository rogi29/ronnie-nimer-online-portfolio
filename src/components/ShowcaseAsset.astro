---
import { Icon } from "astro-icon";

interface Props {
  id: string;
  presentationLink: string;
  externalLink?: string;
  externalTarget?: string;
}

const { id, presentationLink, externalLink, externalTarget } = Astro.props;
---

<div class="showcase-asset" {id}>
  <slot />
  <div class="showcase-asset__actions">
    <div class="showcase-asset__actions--inner">
      <a href={presentationLink} aria-label="Presentation Mode">
        <Icon class="control" pack="mdi" name="fullscreen" aria-hidden="true" />
      </a>
      {
        externalLink && (
          <a
            href={externalLink}
            target={externalTarget}
            aria-label="Project Page"
          >
            <Icon
              class="control"
              pack="mdi"
              name="open-in-app"
              aria-hidden="true"
              style={{ width: "1.975rem" }}
            />
          </a>
        )
      }
    </div>
  </div>
</div>

<style>
  .showcase-asset {
    display: block;
    position: relative;
    width: 100%;
    box-shadow: -3px -3px 15px 1px rgba(0, 0, 0, 0.3);
    border-top: 1px solid #ffffff26;
    border-left: 1px solid #ffffff01;
    margin: 4px 0 16px;
    overflow: hidden;
  }
  .showcase-asset:hover .showcase-asset__actions--inner {
    opacity: 1;
  }
  .showcase-asset__actions {
    display: flex;
    justify-content: center;
    position: absolute;
    padding: 1.25rem;
    width: 100%;
    top: auto;
    bottom: 0;
    z-index: 2;
  }
  .showcase-asset__actions--inner {
    display: flex;
    gap: 1rem;
    width: auto;
    height: auto;
    padding: 0.25rem;
    background: #ffffff66;
    box-shadow:
      0 0.5px 2px #40404480,
      0 4px 8px #00000080;
    border-radius: 8px;
    cursor: pointer;
    opacity: 0;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    transition: opacity 0.3s ease-in-out;
  }
  .showcase-asset__actions a {
    line-height: 1;
  }
  .showcase-asset__actions .control {
    display: block;
    opacity: 1;
    color: #111;
    width: 2.125rem;
    height: 2.125rem;
  }
</style>
