---
interface Props {
  name: string;
  description: string;
  image: string;
}

const { name, description, image } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "VisualArtwork",
  name,
  image,
  description,
  artForm: "Concept Art",
  artMedium: "Digital",
  creator: [
    {
      "@type": "Person",
      name: "Ronnie Nimer",
      sameAs: "https://www.ronnienimer.art/",
    },
  ],
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
