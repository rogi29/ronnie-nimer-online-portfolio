---
import Icon from "astro-icon";
import socialLinksData from "../data/socialLinks.ts";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css?family=Inter"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Croissant One"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot name="background" />
    <header>
      <div class="profile">
        <img
          src="https://ik.imagekit.io/8hod93w55/tr:w-55/ronnie-profile.jpg"
          width="55px"
          height="55px"
        />
      </div>

      <div class="artist">
        <p class="fullname">Ronnie Nimer</p>
        <p class="title">Concept Artist</p>
      </div>
      <nav>
        {
          socialLinksData.map(({ href, title, icon }) => (
            <a href={href} title={title} target="_blank">
              <Icon
                pack={icon.pack}
                name={icon.name}
                color={icon.color ?? "#ffffff"}
              />
            </a>
          ))
        }
      </nav>
    </header>
    <slot name="main" />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box !important;
  }
  html {
    font-size: 16px;
    font-family: Inter, sans-serif;
  }
  @media (max-width: 1080px) {
    html {
      font-size: 14px;
    }
  }
  body {
    margin: 0;
    width: 100%;
    background: #222222;
    position: relative;
  }
  header {
    display: flex;
    width: 100%;
    max-width: 1080px;
    margin: 0 auto;
    position: relative;
    align-items: center;
    padding: 1.5rem 1.25rem;
    gap: 0.75rem;
    z-index: 1;
  }
  header .profile {
    border-radius: 50%;
    overflow: hidden;
    width: 55px;
    height: 55px;
  }
  header .artist {
    flex-grow: 1;
  }
  header .artist .fullname {
    font-family: Inter, sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #fff;
    margin: 0;
  }
  header .artist .title {
    font-family: Inter, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #aaa;
    margin: 0;
  }
  header .links a {
    color: #fff;
    font-family: Inter, sans-serif;
  }
  header nav {
    display: flex;
    gap: 1rem;
  }
  header nav a {
    display: inline-block;
    width: 2rem;
    height: 2rem;
  }
  header nav a svg {
    transition: color ease-in-out 0.2s;
  }
  header nav a:hover svg {
    color: #eeeeee;
  }
</style>
